{
  "name": "@nirholas/mintlify-scraper",
  "version": "1.0.0",
  "description": "Scrape complete documentation from Mintlify sites and generate MCP tools, API clients, and more",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "mintlify-scraper": "./src/scraper.ts",
    "mcp-generator": "./src/mcp-generator.ts",
    "example-extractor": "./src/example-extractor.ts"
  },
  "scripts": {
    "scrape": "tsx src/scraper.ts",
    "generate-mcp": "tsx src/mcp-generator.ts",
    "extract-examples": "tsx src/example-extractor.ts",
    "build": "tsup src/scraper.ts src/mcp-generator.ts src/example-extractor.ts --format esm,cjs --dts",
    "dev": "tsx watch src/scraper.ts",
    "test": "tsx src/scraper.ts https://docs.etherscan.io --output ./test-output"
  },
  "keywords": [
    "mintlify",
    "documentation",
    "scraper",
    "mcp",
    "model-context-protocol",
    "api-client-generator",
    "ai-tools"
  ],
  "author": "nirholas",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "cheerio": "^1.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
